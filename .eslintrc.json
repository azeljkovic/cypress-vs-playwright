{
  "env": {
    "jest": true,
    "browser": true,
    "node": true,
    "es6": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier", "plugin:cypress/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
